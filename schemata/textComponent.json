{
  "$schema": "http://json-schema.org/schema#",
  "$id": "http://github.com/uzh/marugoto-validator",
  "title": "textComponent",
  "description": "textComponent",
  "properties": {
    "id": {
      "type": "null"
    },
    "numberOfColumns": {
      "type": "integer"
    },
    "offsetColumns": {
      "type": "integer"
    },
    "renderOrder": {
      "type": "integer"
    },
    "showInNotebook": {
      "type": "boolean"
    },
    "showInNotebookAt": {
      "enum": [
        null,
        "pageEnter",
        "pageExit"
      ]
    },
    "page": {
      "type": [
        "null",
        "string"
      ]
    },
    "markdownContent": {
      "type": [
        "string",
        "null"
      ]
    }
  }
}