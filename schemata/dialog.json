{
  "$schema": "http://json-schema.org/schema#",
  "$id": "http://github.com/uzh/marugoto-validator",
  "title": "dialog",
  "description": "dialog",
  "properties": {
    "id": {
      "type": "null"
    },
    "from": {
      "type": [
        "null",
        "string"
      ]
    },
    "receiveAfter": {
      "type": "object",
      "required": [
        "time",
        "isAbsolute"
      ],
      "properties": {
        "time": {
          "type": "integer"
        },
        "isAbsolute": {
          "type": "boolean"
        }
      }
    },
    "page": {
      "type": [
        "null",
        "string"
      ]
    },
    "speech": {
      "type": "string"
    },
    "answers": {
      "type": "null"
    }
  }
}