{
  "$schema": "http://json-schema.org/schema#",
  "$id": "http://github.com/uzh/marugoto-validator",
  "title": "audioComponent",
  "description": "audioComponent",
  "properties": {
    "id": {
      "type": "null"
    },
    "numberOfColumns": {
      "type": "integer"
    },
    "offsetColumns": {
      "type": "integer"
    },
    "renderOrder": {
      "type": "integer"
    },
    "showInNotebook": {
      "type": "boolean"
    },
    "showInNotebookAt": {
      "enum": [
        null,
        "pageEnter",
        "pageExit"
      ]
    },
    "page": {
      "type": [
        "null",
        "string"
      ]
    },
    "audio": {
      "type": "string",
      "regex": ".*\\.mp3$"
    }
  }
}
